<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.poli.paradigmas.tc.proyecto.GUI.controller.MenuVehiculosController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Menú de Vehículos" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Button fx:id="btnAgregarVehiculo" text="Agregar Nuevo Vehículo" onAction="#agregarNuevoVehiculo" maxWidth="Infinity" />
    <Button fx:id="btnBuscarVehiculo" text="Buscar Vehículo por Placa" onAction="#buscarVehiculoPorPlaca" maxWidth="Infinity" />
    <Button fx:id="btnActualizarDisponibilidad" text="Actualizar Disponibilidad" onAction="#actualizarDisponibilidadVehiculo" maxWidth="Infinity" />
    <Button fx:id="btnEliminarVehiculo" text="Eliminar Vehículo por Placa" onAction="#eliminarVehiculoPorPlaca" maxWidth="Infinity" />
    <Button fx:id="btnMostrarVehiculos" text="Mostrar Todos los Vehículos" onAction="#mostrarTodosLosVehiculos" maxWidth="Infinity" />
</VBox>